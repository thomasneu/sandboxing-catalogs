# terraform.tfvars.example
# Copy this file to terraform.tfvars and fill in your actual values

# GCP Configuration (REQUIRED)
gcp_project_id = "your-gcp-project-id"
gcp_region     = "europe-west1"

# Databricks Configuration (REQUIRED)
databricks_account_id = "your-databricks-account-id"  # Replace with your account ID
databricks_account_console_url = "https://accounts.gcp.databricks.com"

# Databricks Authentication (REQUIRED - Service Principal)
# See SERVICE_PRINCIPAL_SETUP.md for detailed instructions
databricks_client_id = "your-service-principal-client-id"
databricks_client_secret = "your-service-principal-client-secret"

# Project Configuration (OPTIONAL - defaults provided)
environment  = "snd"
project_name = "sandctl"

# Storage Configuration (OPTIONAL)
storage_class = "STANDARD"  # Options: STANDARD, NEARLINE, COLDLINE, ARCHIVE

# Additional Resource Tags (OPTIONAL)
resource_tags = {
  cost_center = "data-engineering"
  owner       = "data-team"
  purpose     = "unity-catalog-demo"
}

# Workspace Settings (OPTIONAL)
workspace_settings = {
  enable_ip_access_lists         = false
  enable_tokens                  = true
  enable_dbfs_file_browser       = true
  enable_web_terminal            = true
  max_token_lifetime_seconds     = 7776000  # 90 days
}
